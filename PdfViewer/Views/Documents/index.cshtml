@model FileClass
@{ 
    Layout = null;
}

<form asp-controller="Documents" asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <hr />
    <button type="submit">Upload</button>
</form>

@if (Model != null)
{
    <hr />
    <table class="table table-bordered table-striped" cellpadding="0" cellspacing="0" border="1">
        <thead>
            <tr>
                <th></th>
                <th>PDF Name</th>
                <th>Display Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach(FileClass file in Model.Files)
            {
                <tr>
                    <td>@file.FileId</td>
                    <td>@file.Name</td>
                    <td>
                        <a href="../Documents/Index?fileName=@file.Name" style="margin-right:10px;">Current Page</a>
                        <a href="../Documents/PDFViewerNewTab?fileName=@file.Name" target="_blank">New Tab</a>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<br /><br />

<embed id="embPDF" src="/files/@Model.Name" style="width:100%;height:1200px;" />